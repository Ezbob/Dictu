/**
 * toBool.du
 *
 * Testing the nil.toBool() method
 *
 * .toBool() returns the boolean representation of nil (always false)
 */

from UnitTest import UnitTest;

class NilToBoolTest < UnitTest {
    testNilToBool() {
        this.assertFalsey(nil.toBool());
    }

    testNilVariableToBool() {
        const testnil = nil;
        this.assertFalsey(testnil.toBool());
    }
}

NilToBoolTest().run();
